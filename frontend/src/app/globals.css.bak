@import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --background: #f8f9fa;
  --foreground: #1a1a1a;
  --primary: #2c3e50;
  --secondary: #7f8c8d;
  --accent: #3498db;
  --border: rgba(0, 0, 0, 0.1);
  --card-bg: rgba(255, 255, 255, 0.7);
  --hover-bg: rgba(0, 0, 0, 0.02);
  --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
}

@media (prefers-color-scheme: dark) {
  :root {
    --background: #121212;
    --foreground: #f5f5f5;
    --primary: #ecf0f1;
    --secondary: #95a5a6;
    --accent: #3498db;
    --border: rgba(255, 255, 255, 0.1);
    --card-bg: rgba(30, 30, 30, 0.7);
    --hover-bg: rgba(255, 255, 255, 0.05);
    --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2), 0 2px 4px -1px rgba(0, 0, 0, 0.1);
  }
}

@layer base {
  html {
    @apply scroll-smooth;
  }
  
  body {
    @apply bg-background text-foreground font-sans antialiased;
    font-feature-settings: 'kern' 1, 'liga' 1, 'calt' 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
    background-color: var(--background);
    color: var(--foreground);
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  h1, h2, h3, h4, h5, h6 {
    @apply font-bebas tracking-tight;
    letter-spacing: 0.05em;
  }

  h1 {
    @apply text-4xl md:text-5xl font-bold;
  }

  h2 {
    @apply text-3xl md:text-4xl font-bold;
  }

  h3 {
    @apply text-2xl md:text-3xl font-semibold;
  }

  p {
    @apply text-base leading-relaxed text-foreground/90;
  }

  a {
    @apply text-accent hover:opacity-80 transition-opacity duration-200;
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-track {
    @apply bg-transparent;
  }

  ::-webkit-scrollbar-thumb {
    @apply bg-foreground/20 rounded-full hover:bg-foreground/30;
    transition: background-color 0.2s ease;
  }
}

/* Custom classes */
.glass-card {
  @apply backdrop-blur-md bg-card-bg border border-border/50 rounded-xl p-6 shadow-sm transition-all duration-300 hover:shadow-md;
}

.section-title {
  @apply text-3xl font-bebas tracking-wider mb-8 relative inline-block;
}

.section-title::after {
  content: '';
  @apply absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-accent/30 to-transparent;
}

.btn {
  @apply px-6 py-2.5 rounded-lg font-medium transition-all duration-200 flex items-center justify-center gap-2;
}

.btn-primary {
  @apply bg-accent text-white hover:bg-accent/90 shadow-sm;
}

.btn-outline {
  @apply border border-border bg-transparent hover:bg-hover-bg;
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-fade-in {
  animation: fadeIn 0.5s ease-out forwards;
}

/* Utility classes */
.text-gradient {
  @apply bg-clip-text text-transparent bg-gradient-to-r from-accent to-accent/70;
}

/* Custom font */
.font-bebas {
  font-family: 'Bebas Neue', sans-serif;
  letter-spacing: 0.05em;
}
